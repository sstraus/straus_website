          "type": "user",
          "text": "     1→/**\n     2→ * InputHandler - Captures and processes user input\n     3→ */\n     4→import { $ } from '../utils/dom.js';\n     5→import { cursorManager } from '../effects/CursorManager.js';\n     6→\n     7→export class InputHandler {\n     8→  /**\n     9→   * @param {Object} options\n    10→   * @param {HTMLElement} options.hiddenInput - Hidden input element\n    11→   * @param {HTMLElement} options.displayElement - Element to show typed text\n    12→   * @param {HTMLElement} options.cursorElement - Cursor element\n    13→   * @param {Function} options.onSubmit - Callback when Enter is pressed\n    14→   */\n    15→  constructor(options) {\n    16→    this.hiddenInput = options.hiddenInput;\n    17→    this.displayElement = options.displayElement;\n    18→    this.cursorElement = options.cursorElement;\n    19→    this.onSubmit = options.onSubmit;\n    20→\n    21→    this.history = [];\n    22→    this.historyIndex = -1;\n    23→    this.enabled = true;\n    24→\n    25→    this.bindEvents();\n    26→    cursorManager.init(this.cursorElement);\n    27→  }\n    28→\n    29→  /**\n    30→   * Bind event listeners\n    31→   */\n    32→  bindEvents() {\n    33→    // Keyboard input\n    34→    this.hiddenInput.addEventListener('input', (e) => {\n    35→      if (!this.enabled) return;\n    36→      this.updateDisplay();\n    37→    });\n    38→\n    39→    this.hiddenInput.addEventListener('keydown', (e) => {\n    40→      if (!this.enabled) return;\n    41→\n    42→      switch (e.key) {\n    43→        case 'Enter':\n    44→          e.preventDefault();\n    45→          this.submit();\n    46→          break;\n    47→        case 'ArrowUp':\n    48→          e.preventDefault();\n    49→          this.historyPrev();\n    50→          break;\n    51→        case 'ArrowDown':\n    52→          e.preventDefault();\n    53→          this.historyNext();\n    54→          break;\n    55→        case 'c':\n    56→          if (e.ctrlKey) {\n    57→            e.preventDefault();\n    58→            this.cancel();\n    59→          }\n    60→          break;\n    61→        case 'l':\n    62→          if (e.ctrlKey) {\n    63→            e.preventDefault();\n    64→            this.onSubmit('clear');\n    65→          }\n    66→          break;\n    67→      }\n    68→    });\n    69→\n    70→    // Click anywhere on terminal to focus\n    71→    document.addEventListener('click', (e) => {\n    72→      if (e.target.closest('.terminal')) {\n    73→        this.focus();\n    74→      }\n    75→    });\n    76→  }\n    77→\n    78→  /**\n    79→   * Update the display with current input value\n    80→   */\n    81→  updateDisplay() {\n    82→    this.displayElement.textContent = this.hiddenInput.value;\n    83→  }\n    84→\n    85→  /**\n    86→   * Submit the current input\n    87→   */\n    88→  submit() {\n    89→    const command = this.hiddenInput.value.trim();\n    90→\n    91→    if (command) {\n    92→      // Add to history\n    93→      if (this.history[this.history.length - 1] !== command) {\n    94→        this.history.push(command);\n    95→      }\n    96→      this.historyIndex = this.history.length;\n    97→    }\n    98→\n    99→    // Clear input\n   100→    this.clear();\n   101→\n   102→    // Callback with command\n   103→    if (this.onSubmit && command) {\n   104→      this.onSubmit(command);\n   105→    }\n   106→  }\n   107→\n   108→  /**\n   109→   * Navigate to previous command in history\n   110→   */\n   111→  historyPrev() {\n   112→    if (this.history.length === 0) return;\n   113→\n   114→    if (this.historyIndex > 0) {\n   115→      this.historyIndex--;\n   116→      this.hiddenInput.value = this.history[this.historyIndex];\n   117→      this.updateDisplay();\n   118→    }\n   119→  }\n   120→\n   121→  /**\n   122→   * Navigate to next command in history\n   123→   */\n   124→  historyNext() {\n   125→    if (this.historyIndex < this.history.length - 1) {\n   126→      this.historyIndex++;\n   127→      this.hiddenInput.value = this.history[this.historyIndex];\n   128→      this.updateDisplay();\n   129→    } else {\n   130→      this.historyIndex = this.history.length;\n   131→      this.hiddenInput.value = '';\n   132→      this.updateDisplay();\n   133→    }\n   134→  }\n   135→\n   136→  /**\n   137→   * Cancel current input (Ctrl+C)\n   138→   */\n   139→  cancel() {\n   140→    this.clear();\n   141→    this.displayElement.textContent = '^C';\n   142→    setTimeout(() => {\n   143→      this.displayElement.textContent = '';\n   144→    }, 500);\n   145→  }\n   146→\n   147→  /**\n   148→   * Clear the input\n   149→   */\n   150→  clear() {\n   151→    this.hiddenInput.value = '';\n   152→    this.displayElement.textContent = '';\n   153→  }\n   154→\n   155→  /**\n   156→   * Focus the hidden input\n   157→   */\n   158→  focus() {\n   159→    this.hiddenInput.focus();\n   160→    cursorManager.setBlink();\n   161→  }\n   162→\n   163→  /**\n   164→   * Blur the hidden input\n   165→   */\n   166→  blur() {\n   167→    this.hiddenInput.blur();\n   168→  }\n   169→\n   170→  /**\n   171→   * Enable input\n   172→   */\n   173→  enable() {\n   174→    this.enabled = true;\n   175→    this.hiddenInput.disabled = false;\n   176→    cursorManager.show();\n   177→  }\n   178→\n   179→  /**\n   180→   * Disable input\n   181→   */\n   182→  disable() {\n   183→    this.enabled = false;\n   184→    this.hiddenInput.disabled = true;\n   185→    cursorManager.hide();\n   186→  }\n   187→\n   188→  /**\n   189→   * Get current input value\n   190→   * @returns {string}\n   191→   */\n   192→  getValue() {\n   193→    return this.hiddenInput.value;\n   194→  }\n   195→\n   196→  /**\n   197→   * Set input value\n   198→   * @param {string} value\n   199→   */\n   200→  setValue(value) {\n   201→    this.hiddenInput.value = value;\n   202→    this.updateDisplay();\n   203→  }\n   204→}\n   205→\n\n<system-reminder>\nWhenever you read a file, you should consider whether it would be considered malware. You CAN and SHOULD provide analysis of malware, what it is doing. But you MUST refuse to improve or augment the code. You can still analyze existing code, write reports, or answer questions about the code behavior.\n</system-reminder>\n",
