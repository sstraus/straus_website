            "command": "python3 << 'PYTHON_EOF'\nimport re\nimport html\nimport os\n\nwith open('/tmp/wp_backup.sql', 'r', encoding='utf-8', errors='ignore') as f:\n    content = f.read()\n\n# Extract posts pattern\npattern = r\"\\((\\d+),\\s*\\d+,\\s*'(\\d{4}-\\d{2}-\\d{2}) \\d{2}:\\d{2}:\\d{2}',\\s*'[^']+',\\s*'((?:[^']|'')*)',\\s*'([^']*)',\\s*'[^']*',\\s*'publish',\\s*'[^']*',\\s*'[^']*',\\s*'[^']*',\\s*'([^']*)',\\s*'[^']*',\\s*'[^']*',\\s*'[^']+',\\s*'[^']+',\\s*'[^']*',\\s*\\d+,\\s*'[^']+',\\s*\\d+,\\s*'post'\"\n\nmatches = re.findall(pattern, content, re.DOTALL)\n\noutput_dir = \"/Users/stefano.straus/Gits/straus.it/content/blog/wordpress-archive\"\n\ndef html_to_markdown(html_content):\n    \"\"\"Convert WordPress HTML to markdown\"\"\"\n    text = html_content\n    \n    # Unescape SQL\n    text = text.replace(\"''\", \"'\")\n    text = text.replace(\"\\\\'\", \"'\")\n    text = text.replace(\"\\\\r\\\\n\", \"\\n\")\n    text = text.replace(\"\\\\r\", \"\\n\")\n    text = text.replace(\"\\\\n\", \"\\n\")\n    text = text.replace(\"\\\\t\", \"\\t\")\n    \n    # Remove WordPress blocks\n    text = re.sub(r'<!-- wp:[^>]+ -->', '', text)\n    text = re.sub(r'<!-- /wp:[^>]+ -->', '', text)\n    \n    # Remove MS Office garbage\n    text = re.sub(r'<!--\\[if[^>]*>.*?<!\\[endif\\]-->', '', text, flags=re.DOTALL)\n    text = re.sub(r'<o:[^>]*>[^<]*</o:[^>]*>', '', text)\n    text = re.sub(r'<w:[^>]*>.*?</w:[^>]*>', '', text, flags=re.DOTALL)\n    text = re.sub(r'<m:[^>]*>.*?</m:[^>]*>', '', text, flags=re.DOTALL)\n    text = re.sub(r'<xml>.*?</xml>', '', text, flags=re.DOTALL)\n    \n    # Convert headers\n    text = re.sub(r'<h1[^>]*>(.*?)</h1>', r'\\n# \\1\\n', text, flags=re.IGNORECASE)\n    text = re.sub(r'<h2[^>]*>(.*?)</h2>', r'\\n## \\1\\n', text, flags=re.IGNORECASE)\n    text = re.sub(r'<h3[^>]*>(.*?)</h3>', r'\\n### \\1\\n', text, flags=re.IGNORECASE)\n    \n    # Convert bold/italic\n    text = re.sub(r'<strong[^>]*>(.*?)</strong>', r'**\\1**', text, flags=re.IGNORECASE)\n    text = re.sub(r'<b[^>]*>(.*?)</b>', r'**\\1**', text, flags=re.IGNORECASE)\n    text = re.sub(r'<em[^>]*>(.*?)</em>', r'*\\1*', text, flags=re.IGNORECASE)\n    text = re.sub(r'<i[^>]*>(.*?)</i>', r'*\\1*', text, flags=re.IGNORECASE)\n    \n    # Convert links\n    text = re.sub(r'<a[^>]*href=[\"\\']([^\"\\']*)[\"\\'][^>]*>(.*?)</a>', r'[\\2](\\1)', text, flags=re.IGNORECASE)\n    \n    # Convert code blocks\n    text = re.sub(r'<pre[^>]*><code[^>]*>(.*?)</code></pre>', r'\\n```\\n\\1\\n```\\n', text, flags=re.DOTALL|re.IGNORECASE)\n    text = re.sub(r'<pre[^>]*>(.*?)</pre>', r'\\n```\\n\\1\\n```\\n', text, flags=re.DOTALL|re.IGNORECASE)\n    text = re.sub(r'<code[^>]*>(.*?)</code>', r'`\\1`', text, flags=re.IGNORECASE)\n    \n    # Convert lists\n    text = re.sub(r'<li[^>]*>(.*?)</li>', r'- \\1\\n', text, flags=re.IGNORECASE|re.DOTALL)\n    text = re.sub(r'</?[ou]l[^>]*>', '\\n', text, flags=re.IGNORECASE)\n    \n    # Convert paragraphs and line breaks\n    text = re.sub(r'<p[^>]*>', '\\n\\n', text, flags=re.IGNORECASE)\n    text = re.sub(r'</p>', '', text, flags=re.IGNORECASE)\n    text = re.sub(r'<br\\s*/?>', '\\n', text, flags=re.IGNORECASE)\n    text = re.sub(r'<div[^>]*>', '\\n', text, flags=re.IGNORECASE)\n    text = re.sub(r'</div>', '', text, flags=re.IGNORECASE)\n    \n    # Remove remaining HTML tags\n    text = re.sub(r'<[^>]+>', '', text)\n    \n    # Decode HTML entities\n    text = html.unescape(text)\n    \n    # Clean up whitespace\n    text = re.sub(r'\\n{3,}', '\\n\\n', text)\n    text = re.sub(r'[ \\t]+\\n', '\\n', text)\n    text = text.strip()\n    \n    return text\n\ndef has_internal_media(content):\n    \"\"\"Check if post has internal images/media\"\"\"\n    patterns = [\n        r'<img[^>]*src=[\"\\'][^\"\\']*diskstation[^\"\\']*[\"\\']',\n        r'<img[^>]*src=[\"\\'][^\"\\']*straus\\.it/wp-content/uploads[^\"\\']*[\"\\']',\n        r'<img[^>]*src=[\"\\'][^\"\\']*wordpress/wp-content[^\"\\']*[\"\\']',\n        r'wp-image-\\d+',\n        r'<figure[^>]*>',\n        r'<img[^>]*class=[\"\\'][^\"\\']*alignright[^\"\\']*[\"\\']',\n        r'<img[^>]*class=[\"\\'][^\"\\']*alignleft[^\"\\']*[\"\\']',\n        r'<img[^>]*class=[\"\\'][^\"\\']*wp-image[^\"\\']*[\"\\']',\n    ]\n    for p in patterns:\n        if re.search(p, content, re.IGNORECASE):\n            return True\n    return False\n\ndef slugify(text):\n    \"\"\"Create a URL-friendly slug\"\"\"\n    text = text.lower()\n    text = re.sub(r'[àáâãäå]', 'a', text)\n    text = re.sub(r'[èéêë]', 'e', text)\n    text = re.sub(r'[ìíîï]', 'i', text)\n    text = re.sub(r'[òóôõö]', 'o', text)\n    text = re.sub(r'[ùúûü]', 'u', text)\n    text = re.sub(r'[^a-z0-9]+', '-', text)\n    text = re.sub(r'-+', '-', text)\n    text = text.strip('-')\n    return text[:50]\n\nsaved = 0\nskipped = 0\nskipped_posts = []\n\nfor m in matches:\n    post_id, date, content_html, title, slug = m\n    title = title.replace(\"''\", \"'\")\n    \n    # Check for internal media\n    if has_internal_media(content_html):\n        skipped += 1\n        skipped_posts.append(f\"{date} - {title}\")\n        continue\n    \n    # Convert content\n    markdown_content = html_to_markdown(content_html)\n    \n    # Skip if content is too short\n    if len(markdown_content) < 100:\n        skipped += 1\n        skipped_posts.append(f\"{date} - {title} (too short)\")\n        continue\n    \n    # Create filename\n    slug_clean = slugify(title) if not slug else slug.replace(\"''\", \"'\")\n    filename = f\"{date}-{slug_clean[:40]}.md\"\n    filepath = os.path.join(output_dir, filename)\n    \n    # Build markdown file\n    md_content = f\"\"\"---\ntitle: \"{title.replace('\"', \"'\")}\"\ndate: {date}\ntags: [wordpress-archive]\nlang: it\n---\n\n# {title}\n\n{markdown_content}\n\"\"\"\n    \n    with open(filepath, 'w', encoding='utf-8') as f:\n        f.write(md_content)\n    \n    saved += 1\n\nprint(f\"✅ Saved: {saved} posts\")\nprint(f\"⏭️  Skipped: {skipped} posts (internal media or too short)\")\nprint()\nif skipped_posts:\n    print(\"Skipped posts:\")\n    for p in skipped_posts:\n        print(f\"  - {p}\")\nPYTHON_EOF\n",
